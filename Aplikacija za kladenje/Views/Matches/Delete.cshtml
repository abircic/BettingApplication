@model Aplikacija_za_kladenje.Models.Matches

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this match?</h3>
<div>
    <dl class="alert-danger">
        @Html.DisplayFor(model => model.HomeTeam.Name) - @Html.DisplayFor(model => model.AwayTeam.Name)
        <br>
        @Html.DisplayNameFor(model => model.TopMatch) @Html.DisplayFor(model => model.TopMatch)
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-action="Index">Back to Matches</a>
    </form>
</div>
